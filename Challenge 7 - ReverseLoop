//// 2nd Way:

function reverseString(string) {
	var finalStr= "";
	
	for (currentInd = string.length-1; currentInd >= 0 ; currentInd--) {
		finalStr += string[currentInd]
	}
	return finalStr;
}
reverseString("hello")











