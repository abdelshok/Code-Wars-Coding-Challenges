// 2 WAYS TO DO IT HERE
// One of them is a forloop that increments, the other a for loop that decrements


function solution(number){
var num = 0;
// debugger;

// for (var i=number-1; i>1; i--) {
// 	if (i%3 === 0 || i%5 === 0) {
// 		num += i;
// 	}
// }

for (var i=1; i<number; i++) {
	if (i%3 === 0 || i%5 === 0) {
		num += i;
	}
}

	
return num;
}
solution(10)
